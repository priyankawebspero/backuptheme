<script async>
   function onCheckoutClick(e){
                const loader = e.children[2];
                loader.setAttribute("id","btn-loader");
                e.disabled = true
                e.style.cursor = "not-allowed";
    		    initiateGokwik();
                loader.style.display = "flex";
        setTimeout(() =>{
                 loader.style.display = "none";
  				  e.disabled = false
                  e.style.cursor = "pointer";
        loader.removeAttribute("id")
       },3000)
  }
</script>
{% if settings.goEnable %}
<div class="gokwik-checkout"{% if settings.hideFlow %} style="display:none !important;" {% endif %}>
  <button {%if cart.total_price >=1400000%} disabled {% else %}{%endif %}  type='button' onclick="onCheckoutClick(this)">
            <span class="btn-text">
                <span>{{ settings.main-titile }}</span>
                <span>{{ settings.sub-titile }}</span>
            </span>
          <span class="pay-opt-icon">
             <img src="https://cdn.gokwik.co/v4/images/upi-icons.svg">
             <img src="https://cdn.gokwik.co/v4/images/right-arrow.svg">
          </span>
    <div style="display:none"  ><div class="cir-loader">Loading..</div></div>
  </button>
</div>
{% endif %} 