<div class="inner product-item{% if sold_out %} sold-out{% endif %} {% if product.tags contains 'Plum 999' %} plum_999{% endif %} {% if on_sale %} on-sale{% endif %}" data-product-id="product-{{ productP.id }}">
  <p class="parent_product">try mini for free</p>
<div class="inner-top">
    <div class="product-top">

      <label class="offer_label" ><a href="{{ productP.url }}"></a></label>
      <div class="product-image{% if productP.images.size > 1 and settings.image_swap %} image-swap{% endif %}">
        <span id="secomapp-fg-image-{{ product.id }}" style="display: none;"> {{ "icon-freegift.png" | asset_url | img_tag: "", "sca-fg-img-collect" }} </span>
        <span class="sca-fg-cat-list prod-show-list" style="display:none;" id="secomapp-fg-data-{{ product.id }}"> </span>
        <a href="{{ productP.url }}" class="product-grid-image" data-collections-related="/collections/{{collection.handle}}?view=related">
          {%- assign img_pr = productP.featured_image.src | product_img_url: '400x' -%}
          {%- assign img_pr_1 = productP.featured_image.src | product_img_url: '300x' -%}
          {%- assign img_pr_2 = productP.featured_image.src | product_img_url: '400x' -%}

          {%- assign img_0 = productP.images[0].src | product_img_url: '400x' -%}
          {%- assign img_01 = productP.images[0].src | product_img_url: '300x' -%}
          {%- assign img_02 = productP.images[0].src | product_img_url: '400x' -%}

          {%- assign img_1 = productP.images[1].src | product_img_url: '400x' -%}
          {%- assign img_11 = productP.images[1].src | product_img_url: '300x' -%}
          {%- assign img_12 = productP.images[1].src | product_img_url: '400x' -%}

          {% if productP.images.size > 1 and settings.image_swap %}
          <img alt="{{ productP.images[0].alt | escape }}"
               class="images-one lazyload"
               data-src="{{ img_0 }}"
               data-srcie="{{ img_01 }}"
               data-srcief="{{ img_02 }}"
               data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ productP.featured_image.aspect_ratio }}"
               data-sizes="auto">

          <span class="images-two">
            <img alt="{{ productP.images[1].alt | escape }}"
                 class="lazyload"
                 data-src="{{ img_1 }}"
                 data-srcie="{{ img_11 }}"
                 data-srcief="{{ img_12 }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ productP.featured_image.aspect_ratio }}"
                 data-sizes="auto">

          </span>
          {% else %}
          <img alt="{{ productP.featured_image.alt | escape }}"
               data-src="{{ img_pr }}"
               data-srcie="{{ img_pr_1 }}"
               data-srcief="{{ img_pr_2 }}"
               class="lazyload"
               data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ productP.featured_image.aspect_ratio }}"
               data-sizes="auto">
          {% endif %}
        </a>
      </div>
   </div>

    {% comment %} Use for productGrid {% endcomment %}
    <div class="product-bottom">
      {% if settings.display_product_reviews %}
      <span class="shopify-product-reviews-badge" data-id="{{ productP.id }}"></span>
      {% endif %}     
     {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', jm_style: '', concierge_install: true, product: productP %}
      
      <a class="product-title" href="{{ productP.url }}">
        <span class="lang1">
          {{ productP.title }}
        </span>
      </a>
      {% assign variantCounts = productP.variants | size %}
      {% if variantCounts > 1 %}
      {% assign producTemplate =  productP.template_suffix %}
      {% if producTemplate == 'swatch' %}
      <span class="shade-list">{{variantCounts}} shades</span>
      {% else %}
      <span class="shade-sizes">{{variantCounts}} sizes</span>
      {% endif %}
      {% endif %}
      <div class="price-box">              
        {% if on_sale %}
        <div class="price-sale">
         <span class="price-mrp test"></span> <span class="old-price">{{ productP.variants[0].compare_at_price | money }}</span>
          <span class="price-mrp test"></span><span class="special-price">{{ productP.variants[0].price | money }}</span>
        </div>
        {% else %}
        <div class="price-regular">
          <span class="price-mrp test"></span><span>{{ productP.variants[0].price | money }}</span>
        </div>
        {% endif %}
      </div>
      
      {% if settings.display_button %}
      {% assign prodtemplate =  productP.template_suffix %}
      <div class="action">
        {% include 'add-to-cart-form-min', id: 'grid-product-form-' %}
        {% comment %} {% include 'iwish_v2' with 'iwishCollection' %}{% endcomment %}
      </div>
       {% endif %}

      
      {% if settings.display_item_swatch %}
      {% comment %}{% include 'item-swatch' %}
      {% include 'swatch' with 'color' %}{% endcomment %}
      {% endif %}
      
    </div>
  </div>

  <!-- **BEGIN** Hextom USB Integration // Collection Include - DO NOT MODIFY -->
  {% render 'hextom_usb_coll', product: product %}
  <!-- **END** Hextom USB Integration // Collection Include - DO NOT MODIFY -->
</div>

<style>
  .product-label.deactive {
    display: none !important;
}.parent-product-section .inner-top {
    display: flex;
    justify-content: center;
    align-items: center;
}.parent-product-section a.product-title {
    font-size: 16px;
}.parent-product-section .product-bottom {
    width: 55%;
}
</style>
