{% if settings.display_popup_newsletter %}
<div class="wrapper-newsletter halo-modal" data-newsletter data-delay="{{settings.popup_newsletter_delay | times:1000}}">
  <div class="modal-overlay">
    <div class="halo-modal-content">
      <a class="close close-window" title="{{ 'cart.ajax_cart.close' | t }}">
        {% include 'icon-close' %}
      </a>

      <div class="halo-modal-body">
        <div class="column-left">
          <!--     Upload Link    -->
          <a href="https://plumgoodness.com/collections/all-in-stock">

            {%- assign img_url = settings.newsletter | img_url: 'master' -%}

            {% if settings.newsletter != blank %}
            <img data-src="{{ img_url }}"
                 src="{{ img_url }}" class="lazyautosizes lazyloaded desktop-xs" data-sizes="auto">


            {% else %}
            <div class="not_img"> 360 x 360px </div>  
            {% endif %}

            <!-- Upload mobile image -->
            <img src="https://cdn.shopify.com/s/files/1/0390/2985/files/popup-mobile_operation-resumed_2.jpg?v=1588319458" class="lazyautosizes lazyloaded hidden-xs">

          </a>

        </div>
        {% comment %}
        <div class="column-right">
          {% if settings.popup_newsletter_title != blank %}
          <h2 class="title">
            {% include 'multilang' with settings.popup_newsletter_title %}
          </h2>
          {% endif %}

          {% if settings.popup_newsletter_des != blank %}
          <div class="des">
            {% include 'multilang' with settings.popup_newsletter_des %}
          </div>
          {% endif %}

          <div id="mailchimp-email-subscibe" class="newsletter">
            <div id="mc_embed_signup">
              {% include 'newsletter-form' %}
            </div>
          </div>

          {% if settings.display_popup_social %}
          <div class="icon-social">
            {% include 'social-media' %}
          </div>
          {% endif %}

          {% if settings.popup_newsletter_text_note != blank %}
          <input id="dismiss" type="checkbox" name="dismiss">
          <label for="dismiss">
            {% include 'multilang' with settings.popup_newsletter_text_note %}
          </label>
          {% endif %}
        </div>
        {% endcomment %}
      </div>
    </div>
  </div>
</div>
{% endif %}