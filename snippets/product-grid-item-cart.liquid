<div class="inner product-item{% if sold_out %} sold-out{% endif %} {% if product.tags contains 'Plum 999' %} plum_999{% endif %} {% if product.tags contains 'Lipstick' %} plum-Lipstick{% endif %}" data-product-id="product-{{ product.id }}">
  <div class="inner-top">
    <div class="product-top">

      <label class="offer_label" ><a href="{{ product.url | within: collection }}"></a></label>
      <div class="product-image{% if product.images.size > 1 and settings.image_swap %} image-swap{% endif %}">
        <span id="secomapp-fg-image-{{ product.id }}" style="display: none;"> {{ "icon-freegift.png" | asset_url | img_tag: "", "sca-fg-img-collect" }} </span>
        <span class="sca-fg-cat-list prod-show-list" style="display:none;" id="secomapp-fg-data-{{ product.id }}"> </span>
        <a href="{{ product.url | within: collection }}" class="product-grid-image" data-collections-related="/collections/{{collection.handle}}?view=related">
          {%- assign img_pr = product.featured_image.src | product_img_url: '400x' -%}
          {%- assign img_pr_1 = product.featured_image.src | product_img_url: '300x' -%}
          {%- assign img_pr_2 = product.featured_image.src | product_img_url: '400x' -%}

          {%- assign img_0 = product.images[0].src | product_img_url: '400x' -%}
          {%- assign img_01 = product.images[0].src | product_img_url: '300x' -%}
          {%- assign img_02 = product.images[0].src | product_img_url: '400x' -%}

          {%- assign img_1 = product.images[1].src | product_img_url: '400x' -%}
          {%- assign img_11 = product.images[1].src | product_img_url: '300x' -%}
          {%- assign img_12 = product.images[1].src | product_img_url: '400x' -%}

          {% if product.images.size > 1 and settings.image_swap %}
          <img alt="{{ product.images[0].alt | escape }}"
               class="images-one lazyload"
               data-src="{{ img_0 }}"
               data-srcie="{{ img_01 }}"
               data-srcief="{{ img_02 }}"
               data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ product.featured_image.aspect_ratio }}"
               data-sizes="auto">

         {% else %}
          <img alt="{{ product.featured_image.alt | escape }}"
               data-src="{{ img_pr }}"
               data-srcie="{{ img_pr_1 }}"
               data-srcief="{{ img_pr_2 }}"
               class="lazyload"
               data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ product.featured_image.aspect_ratio }}"
               data-sizes="auto">
          {% endif %}
        </a>
      </div>
    </div>
    <div class="product-bottom"> 
      <a class="product-title" href="{{ product.url | within: collection }}">
        <span class="lang1">
          {{ product.title }}
        </span>
      </a>
      <div class="price-box">              
            {% if product.compare_at_price_max > product.price %}
        <div class="price-sale">
         <span class="price-mrp test"></span> <span class="old-price">{{ product.variants[0].compare_at_price | money }}</span>
          <span class="price-mrp test"></span><span class="special-price">{{ product.variants[0].price | money }}</span>
        </div>
        {% else %}
        <div class="price-regular">
          <span class="price-mrp test"></span><span>{{ product.variants[0].price | money }}</span>
        </div>
        {% endif %}
      </div>
      
      {% if settings.display_button %}
      {% assign prodtemplate =  product.template_suffix %}
      <div class="action">
        {% include 'add-to-cart-form', id: 'grid-product-form-' %}
      </div>
       {% endif %}
      
    </div>
  </div>
</div>
