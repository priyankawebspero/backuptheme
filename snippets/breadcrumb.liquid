      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "{{ 'general.breadcrumbs.home' | t }}",
        "item": "{{ shop.url }}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ blog.title  }}"
      
      }
     ]
    }
     {%- elsif template.name == 'article' -%}


    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "{{ 'general.breadcrumbs.home' | t }}",
        "item": "{{ shop.url }}"
      },   {
        "@type": "ListItem",
