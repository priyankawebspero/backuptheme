        <div id="tab1" class="tab_content">
          <ul class="list-blog" id="homepage-blogs-sec1">   
            {% capture blogs_data %}
            {% assign featuredBlogs = "ingredients,lifestyle,tips-tricks-easy-hacks-more,skincare,haircare,body-bloggin-1,concerns,world-of-goodness,whats-new,plumblogs" | split:',' %}            {% assign article_list = '' %}

            {% assign featuredArticles = false %}

            {% for featuredBlog in featuredBlogs %}
                {% if blogs[featuredBlog].articles %}
                 {% if featuredArticles %}
                   {% assign featuredArticles = featuredArticles | concat:blogs[featuredBlog].articles %}
                 {% else %}
                   {% assign featuredArticles = blogs[featuredBlog].articles %}
                 {% endif %}
                {% endif %}
            {% endfor %}


            {% if featuredArticles %}
                {% assign featuredArticles = featuredArticles | sort:'published_at' | reverse %}
                {% for article in featuredArticles limit: 6 %}
                <li class="blog-item">
                <div class="article-details">
                {% if article.image %}
                {% assign image_alt = article.title | escape %}
                <div class="article-img">
                  {{ article | img_url: '370x' | img_tag: image_alt, 'article__image' | link_to: article.url | replace: '<a', '<a class="animate-scale"' }}
                </div>

                {% else %}
                <div class="article-img">
                  <img data-src="https://cdn.shopify.com/s/files/1/0257/8766/2417/files/blog.png?v=1576997571" src="https://cdn.shopify.com/s/files/1/0257/8766/2417/files/blog.png?v=1576997571" class="lazyautosizes lazyload">
                </div>
                {% endif %}

                <h3 class="article-title">
                  <a href="{{ article.url }}">
                    {% include 'multilang' with article.title %}
                  </a>
                  <div class="author_details">
                   {% capture date %}
                    <time datetime='{{ article.published_at | date: '%d-%m-%Y' }}'>{{ article.published_at | date: '%d %b %Y' }}</time>
                  {% endcapture %}

                  {% assign today_date = article.published_at | date: '%s' %}
                  {% assign pre_date =  '01 Sep, 2021' | date: '%s' %}

                  {% if today_date < pre_date %}
                  {% capture author %}<i class="fa fa-user-circle-o"></i> Plum People{% endcapture %}
                  {% else %}
                  {% capture author %}<i class="fa fa-user-circle-o"></i> {{ article.author }}{% endcapture %}
                  {% endif %}

                <span class="article__author">
                  {{ author }}
                </span>

                <span class="article__date">
                  | {{ date }}
                </span>
                </div>                </h3> 
                
                <div class="rte article-excerpt">
                  <div class="des">
                    {% if settings.enable_multilang and article.excerpt_or_content contains '[lang2]' %}
                    <div class="lang1">
                      {{ article.excerpt_or_content | strip_html | truncatewords: 25 | split: "[lang2]" | first | split: "|" | first}}
                    </div>
                    <div class="lang2">
                      {{ article.excerpt_or_content | strip_html | truncatewords: 25 | split:"[lang2]" | last | split: "|" | last }}
                    </div>
                    {% else %}
                    {{ article.excerpt_or_content | strip_html | truncatewords: 25  | split:"[lang2]" | first | split: "|" | first }}
                    {% endif %}
                  </div>
                  <div class="share-icons-and-readmore">
                    <div class="actions">
                      <a href="{{ article.url }}" {% if settings.enable_multilang %}data-translate="blogs.article.read_more"{% endif %} class="btn">
                        {{ 'blogs.article.read_more' | t }}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </li>
                {% endfor %}
            {% endif %}
