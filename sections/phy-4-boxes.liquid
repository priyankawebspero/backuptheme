{% if section.blocks.size > 0 %}
<div class="phy-collection-four-boxes">
  <div class="{% if section.settings.layout == 'default' %}container-padd60{% else %}container-fluid{% endif %}">
    {% if section.settings.spotlight_block_title != blank %}
    <div class="widget-title{% if section.settings.title_style == 'style_2' %} not-before{% endif %}{% unless section.settings.spotlight_block_des != blank %} no-des{% endunless %}">   
      <h3 class="box-title">
        <span class="title"> 
          {% include 'multilang' with section.settings.spotlight_block_title %}
        </span>
      </h3>
      {% if section.settings.spotlight_block_des != blank %}
      <p>
        {% include 'multilang' with section.settings.spotlight_block_des %}
      </p>        
      {% endif %}
    </div>
    {% endif %}
    
    <div class="row spotlight-{{ section.blocks.size }}-blocks">
       {% for block in section.blocks %}             
      <div class="col-2 col-md-2 col-lg-2">
        <div class="spotlight-item">
          <div class="img-box">
            <a href="{{ block.settings.link }}" class="animate-scale">
              {% if block.settings.image_desk != blank or block.settings.image_mob != blank %}
              {% if block.settings.image_desk != blank %}
              <img data-src="{{ img_url_1 }}"
                   src="https:{{ img_url_1 }}" alt="{{ block.settings.image.alt | default: shop.name }}" itemprop="logo"
                   class="lazyautosizes lazyload mobile_collection_image" data-sizes="auto">
              {% endif %}
              {% if block.settings.image_mob != blank %}
              <img data-src="{{ img_url }}"
                   src="https:{{ img_url }}" alt="{{ block.settings.image.alt | default: shop.name }}" itemprop="logo"
                   class="lazyautosizes lazyload desktop_collection_image" data-sizes="auto">
              {% endif %}
              {% else %}

              <div class="not_img">
                370 x 440px
              </div>   
              {% endif %}
            </a>
            
            {% if block.settings.sub_title != blank  %}
            <h5 class="sub-title">
              {% include 'multilang' with block.settings.sub_title %}       
            </h5>
            {% endif %}
          </div>

          {% if block.settings.title != blank  %}
          <div class="content spotlight-inner">            
            <h3 class="title">
              {% include 'multilang' with block.settings.title %} 
              <span class="border-bt-hover"></span>
            </h3>            
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% endif %}


{% schema %}
  {
    "name": "PHY collection four boxes",
	"class": "phy-collection-four-boxes",
    "max_blocks": 6,
    "settings": [      
        {
            "type": "select",
            "id": "layout",
            "label": "Spotlight 2 Layout:",
            "options": [
                {
                    "value": "default",
                    "label": "Default"
                },
                {
                    "value": "full",
                    "label": "Full Width"
                }
            ],
            "default": "default"
        },
        {
            "type": "checkbox",
            "id": "display_padding",
            "label": "Display Padding?",
            "default": false
        },
        {
            "type": "text",
            "id": "spotlight_block_title",
            "label": "Title",
            "default": "#Featured On Ella"
        },
        {
            "type" : "textarea",
            "id" : "spotlight_block_des",
            "label" : "Description"
        }	
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [		  	
          {
            "type": "image_picker",
            "id": "image_desk",
            "label": "Image Desktop",
            "info":  "Small(370X240) / large(770x240)"
          },{
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image Mobile",
            "info":  "Small(400X525) / large(800x500)"
          },
          {
            "type" : "text",
            "id" : "title",
            "label" : "Title",
            "default" : "Lorem De Dorus"
          },
		  {
            "type" : "text",
            "id" : "sub_title",
            "label" : "Sub Title",
            "default" : "NULLAM DAPIBUS LIBEROS "
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "PHY collection four boxes",
        "category": "Advanced layout",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
	      {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}