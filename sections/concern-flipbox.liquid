<script>
  $('#scroll_top').on('click', function(){
    $('html,body').animate({scrollTop: $("#top_scroll").offset().top},'slow');
  })

  var blogBlock = $('[data-blogs-slider-new]');

  blogBlock.each(function() {
    var self = $(this),
        rows = self.data('rows');

    if(self.not('.slick-initialized')) {
      self.slick({
        slidesToShow: rows,
        slidesToScroll: 1,
        dots: true,
        autoplay: false,
        infinite: false,
        arrows: true,
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToScroll:1,
              slidesToShow: 5
            }
          },
          {
            breakpoint: 767,
            settings: {
              slidesToScroll: 1,
              slidesToShow: 2
            }
          }
        ]
      });
    };
  });

   $('div[data-id="dullness-pigmentation"]').addClass("active");
  $("#dullness-pigmentation" ).addClass("active");
  
  $('.popup_video_link').on('click', function(){
    let videoUrl = $(this).find('.videourl').data('url');
    $('.popup-tbl-pg').addClass('open-popup');
    $('body').addClass('popup-opened');
    $('.popup-tbl-pg iframe').attr('src', videoUrl);
  });

  $('button.close').on('click', function(){
    $('.popup-tbl-pg').removeClass('open-popup');
    $('iframe').attr('src', $('iframe').attr('src'));
    $('body').removeClass('popup-opened');
  });

  $(document).click(function (e) {
    if (!$(e.target).parents().andSelf().is('.popup_video_link')) {
      $(".popup-tbl-pg").removeClass('open-popup');
      $('iframe').attr('src', $('iframe').attr('src'));
      $('body').removeClass('popup-opened');
    }
  });


  $(".spotlight-item").on("click", function(){
    var concern_id = $(this).data("id");
    $("body").find(".concern_tab" ).removeClass("active");
    $("body").find(".spotlight-item" ).removeClass("active");
    $(this).addClass("active");
    $("body").find("#" + concern_id ).addClass("active");
  });
</script>