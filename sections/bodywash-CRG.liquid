{% if section.blocks.size > 0 %}
<div class="bodywash-crg-block bodywash-spotlight-slider" id="home-spotlight-slider-{{section.id}}">
    <div class="{% if section.settings.layout == 'default' %}container{% elsif section.settings.layout == 'padd_50' %}container-padd60{% else %}container-fluid{% endif %}">
        <div class="row spotlight-{{ section.blocks.size }}-blocks"{% if section.blocks.size > 1 %} data-blogs-slider-new{% endif %} data-rows="3">
            {% for block in section.blocks %}
            
            {% case section.blocks.size %}
                {% when 1 %}
                    {%- assign column_size = 'col-12 item' -%}
                {% when 2 %}
                    {%- assign column_size = 'col-12 col-md-6 item' -%}
                {% when 3 %}
                    {%- assign column_size = 'col-12 col-md-6 col-lg-4 item' -%}  
                {% when 4 %}
                    {%- assign column_size = 'col-12 col-md-6 col-lg-4 item' -%}        
            {% endcase %}
                
            <div class="{{ column_size }}">
                <div class="spotlight-item" >
                    <div class="img-box">
                       <div class="img-box-ratio">
                            {% if block.settings.image != blank %}
                            
                            {%- assign img_url = block.settings.image | img_url: '340x'-%}

                            <img data-src="{{ img_url }}"
                                src="https:{{ img_url }}" alt="{{ block.settings.image.alt | default: shop.name }}" itemprop="logo"
                                class="lazyautosizes lazyloaded" data-sizes="auto">

                            {% else %}
                            <div class="not_img">
                                370 x 440px
                            </div>   
                            {% endif %}</div>
                        
                        {% if block.settings.title != blank or block.settings.link_text != blank %}
                        <div class="content spotlight-inner">
                            {% if block.settings.title != blank  %}
                            <h3 class="title">
                                {% include 'multilang' with block.settings.title %} 
                            </h3>
                            {% endif %}

                            {% if block.settings.link_text != blank  %}
                            <a href="{{ block.settings.link }}" class="shop_link text-hover">
                                {% include 'multilang' with block.settings.link_text %}
                            </a>
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
              {% if section.settings.spotlight_block_title != blank or section.settings.spotlight_block_btn != blank %}
        <div class="widget-title{% if section.settings.title_style == 'style_2' %} not-before{% endif %}{% unless section.settings.spotlight_block_des != blank %} no-des{% endunless %}">   
            <h3 class="box-title">
                <span class="title"> 
                {% include 'multilang' with section.settings.spotlight_block_title %}
                </span>
            </h3>
            {% if section.settings.spotlight_block_des != blank %}
            <p>
                {% include 'multilang' with section.settings.spotlight_block_des %}
            </p>        
            {% endif %}
          {% if section.settings.spotlight_block_url != blank %}
         			 <a class="btn" href="{{section.settings.spotlight_block_url}}">{{section.settings.spotlight_block_btn}}</a>     
            {% endif %}
          
        </div>
        {% endif %}
    </div>
</div>

<style>
  {% assign margin_bottom =  section.settings.margin_bottom %}

  {% if section.settings.display_padding %}
  #home-spotlight-slider-{{ section.id }} {
    padding: 50px 0 90px;
  }

  @media (max-width: 1199px) and (min-width: 768px) {
    #home-spotlight-slider-{{ section.id }} {
      padding: 40px 0 70px;
    }
  }

  @media (max-width: 767px) {
    #home-spotlight-slider-{{ section.id }} {
      padding: 30px 0 50px;
    }
  }
  {% endif %}

  #home-spotlight-slider-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};    
  }

  #home-spotlight-slider-{{ section.id }} .widget-title .box-title .title {
    background-color: {{ section.settings.bg_color }};    
  }

  @media (max-width: 1199px) {
    #home-spotlight-slider-{{ section.id }} {
      margin-bottom: {{ section.settings.margin_bottom_mb }}px;
    }
  }

  @media (min-width: 1200px) {
    #home-spotlight-slider-{{ section.id }} {
      margin-bottom: {{ margin_bottom }}px;
    }
  }	
</style>
{% endif %}


{% schema %}
  {
    "name": "Bodywash CRG Slider",
	"class": "bodywash-spotlight-slider-sections",
    "max_blocks": 4,
    "settings": [      
        {
            "type": "select",
            "id": "layout",
            "label": "Layout:",
            "options": [
                {
                    "value": "default",
                    "label": "Default"
                },
                {
                    "value": "padd_50",
                    "label": "Boxed"
                },
                {
                    "value": "full",
                    "label": "Full Width"
                }
            ],
            "default": "default"
        },
        {
            "type": "checkbox",
            "id": "display_padding",
            "label": "Display Padding?",
            "default": true
        },
        {
            "type" : "color",
            "id" : "bg_color",
            "label" : "Background Color",
            "default" : "#f5f5f5"
        },
        {
            "type": "text",
            "id": "spotlight_block_title",
            "label": "Title",
            "default": "#Spotlight"
        },
        {
            "type" : "textarea",
            "id" : "spotlight_block_des",
            "label" : "Description",
            "default": "Phasellus lorem malesuada ligula pulvinar commodo maecenas"
        },
        {
            "type": "text",
            "id": "spotlight_block_btn",
            "label": "Button"
        },
        {
            "type": "url",
            "id": "spotlight_block_url",
            "label": "Enter url"
        },
        {
            "type": "select",
            "id": "title_style",
            "label": "Title Style:",

            "options": [
                {
                    "value": "style_1",
                    "label": "Style 1" 
                },
                { 
                    "value": "style_2",
                    "label": "Style 2" 
                }          
            ],
            "default": "style_2"
        },
        {
            "type": "range",
            "id": "margin_bottom_mb",
            "label": "Margin Bottom for Mobile",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 0
        },	
        {
            "type": "range",
            "id": "margin_bottom",
            "label": "Margin Bottom for PC",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 0
        }	
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [		  	
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type" : "text",
                    "id" : "title",
                    "label" : "Title",
                    "default" : "Lorem De Dorus"
                },
                {
                    "type" : "text",
                    "id" : "link_text",
                    "label" : "Shop Now Text",
                    "default" : "Shop Now"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Bodywash Slider",
        "category": "Advanced layout",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
	      {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}


<script>
        var blogBlock = $('[data-blogs-slider-new]');

      blogBlock.each(function() {
        var self = $(this),
            rows = self.data('rows');

        if(self.not('.slick-initialized')) {
          self.slick({
            slidesToShow: rows,
            slidesToScroll: 1,
            dots: false,
            autoplay: false,
            infinite: false,
            arrows: false,
            responsive: [
              {
                breakpoint: 1024,
                settings: {
                  slidesToScroll:1,
                  slidesToShow: 3
                }
              },
              {
                breakpoint: 768,
                settings: {
                  slidesToScroll: 1,
                  slidesToShow: 2
                }
              }
            ]
          });
        };
      });
</script>