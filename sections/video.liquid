<div class="homepage-video-section container-padd60" id="featured-video-{{ section.id }}">
  {% if section.settings.video_title != blank %}
  <div class="widget-title">   
    <h3 class="box-title">
      <span class="title"> 
        {% include 'multilang' with section.settings.video_title %}
      </span>
    </h3>
    {% if section.settings.description != blank %}
    <p>
      {% include 'multilang' with section.settings.description %}
    </p>        
    {% endif %}
  </div>
  {% endif %}
  <div class="row">
    <div class="col-sm-12">
      <div class="video-popup">
        <button type="button" class="" data-toggle="modal" data-target="#size-chart" style="border: 0; padding: 0;">
          <img data-src="{{section.settings.image_slide | img_url:'master' | replace:'cdn.shopify.com', '47vuve1w.cdn.imgeng.in'}}" src="{{section.settings.image_slide | img_url:'master' | replace:'cdn.shopify.com', '47vuve1w.cdn.imgeng.in'}}" style="border-radius: 8px;cursor:pointer" class="lazyautosizes lazyload slide-pc"> 
          <img data-src="{{section.settings.image_slide_mb | img_url:'master' | replace:'cdn.shopify.com', '47vuve1w.cdn.imgeng.in'}}" src="{{section.settings.image_slide_mb | img_url:'master' | replace:'cdn.shopify.com', '47vuve1w.cdn.imgeng.in'}}" style="border-radius: 8px;cursor:pointer" class="lazyautosizes lazyload slide-mobile"> 
        </button>
       
        <!-- Start here -->
        <div class="remodal" data-remodal-id="size-chart{{product_id}}" data-remodal-options="hashTracking: false">
          <a data-remodal-action="close" class="remodal-close"></a>
          <div class="details-page-size-chart">
            <div class="modal fade" id="size-chart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                  </div>
                  <div class="modal-body">

                    <iframe width="100%" class="youtube_frame" data-video-id="{{ section.settings.video_link1 }}" height="349" src="https://www.youtube.com/embed/{{ section.settings.video_link1 }}?enablejsapi=1&rel=0&autoplay=0" frameborder="0" allowfullscreen="" volume="0"></iframe>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div> 

      </div>

    </div>
  </div>
</div>
<script>
  $(".close").click(function(){
 $('.youtube_frame')[0].contentWindow.postMessage('{"event":"command","func":"' + 'stopVideo' + '","args":""}', '*');
}); 
  </script>
<style>
  .videoWrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    padding-top: 25px;
    height: 0;
  }
  .videoWrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius:5px;
  }
  @media ( max-width: 786px ) {
    .homepage-video-section {
      padding-bottom: 20px;
      padding: 0 10px;
    }
    .homepage-video-section iframe{
      border-radius: 5px;
    }
  }
  {% assign margin_bottom =  section.settings.margin_bottom %} 

  @media (max-width: 767px) {
    iframe {
      width: 100%;
    }
    #featured-video-{{section.id}} {
      margin-bottom: {{ section.settings.margin_bottom_mb }}px;
    }

  }

  @media (min-width: 768px) and (max-width: 1199px) {
    #featured-video-{{section.id}} {
      margin-bottom: {{ section.settings.margin_bottom_tab }}px;
    }
  }

  @media (min-width: 1200px) {
    #featured-video-{{section.id}} {
      margin-bottom: {{ margin_bottom }}px;
    }
  }	
  @media ( min-width: 680px ) {
    div#shopify-section-1575369352128 .modal-dialog {
      max-width: 600px;
    }
        div#shopify-section-1575369352128 .modal {
      top: 16%;
    }
</style>
