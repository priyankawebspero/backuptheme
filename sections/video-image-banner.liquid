<div class="video-section">
<h3 class="mobile">{{section.settings.heading}}<img src="https://cdn.shopify.com/s/files/1/0390/2985/files/watch_film_here.png?v=1641539342"></h3>
<div class="video-container">
  <div class="js-video ng-isolate-scope" >
    <div class="video-poster">
    </div> 
    <div class="play"><i class="fa fa-play-circle"></i></div> 
  </div>
</div>
  <h3 class="desktop">{{section.settings.heading}}<img src="https://cdn.shopify.com/s/files/1/0390/2985/files/watch_film_here_icon_6af02a15-ee64-43fa-8b6d-1c9c006cb578.png?v=1641794574"></h3>
</div>


{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
       "type": "text",
       "id": "heading",
       "label" : "Heading"
     },{
       "type": "text",
       "id": "video_id",
       "label" : "Add your video id here"
     }
   ]
  }
{% endschema %}


<style>


.js-video{
	height:529px;
	width:940px;
	background:#dedede;
	position:relative;
	margin:10% auto;
}
.play i {
    position: absolute;
    left: 50%;
    top: 50%;
    color: #5d248b;
    font-size: 70px;
    background: #fff;
    border-radius: 50%;
    height: 40px;
    width: 51px;
    line-height: 50px;
    z-index: 2;
}
.video-poster {
    background: url('https://cdn.shopify.com/s/files/1/0390/2985/files/youtube_thumbnail.jpg?v=1642566722');
    background-repeat: no-repeat;
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: contain;
}
.play i:hover{
	cursor:pointer;
}
.js-video iframe{
	z-index:5;
	position: relative;
}
</style>

<script>
jQuery(document).ready(function() {
	jQuery('.play i').click(function(event){
	   event.preventDefault();
	  //var url = $(this).html(); //this will not work	
      $(".js-video").append('<iframe id="video-play" width="940" height="529" src="https://www.youtube.com/embed/bxCZNQgIVLg?autoplay=1" frameborder="0" allow="autoplay" encrypted-media></iframe>');
		$(this).hide();
		//$('video-poster').css('z-index','-1');
		
	});
});
</script>



