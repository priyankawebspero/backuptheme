<style>
  /*--------------------------------------------------contact-us-page--------------------------------------------*/
  .contact-banner{display:flex; max-width:100%;}
  .small-banner{display:flex; align-item:center; justify-content:center; flex:0 0 100%; padding:50px 0; text-align:center; line-height:100%; margin:0;}
  .small-banner h2 {
    color: #5e0d8d;
    font-family: Segoe Pro;
    font-weight: 400;
    font-size: 52px;
    margin-bottom: 0;
    line-height: 1;
  }
  .contact-grid .text-wrap a {
    text-decoration: underline;
  }
  .contact-grid{padding:50px 0;}
  .contact-grid .text-wrap{margin-bottom:40px;}

  .contact-grid .text-wrap h4{color:#5e0d8d;  font-family: Segoe Pro; font-weight:400; font-size:22px; margin:0 0 5px; display:block;}
  .contact-grid .text-wrap span, .contact-grid .text-wrap a{display:block; color:#505050; font-family:'Nunito', sans-serif; font-weight:500; font-size:16px;}
  .contact-grid .text-wrap a:hover{color:#5e0d8d}

  ul.social {
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
    display: block;
    justify-content: space-around;
    border-bottom: 1px solid #fff;
    max-width: 100%;
    width: 100%; padding-bottom:0px; margin-bottom:0px;
  }

  ul.social li{display:inline-block; margin:0 5px;}
  ul.social li a {
    background: #333;
    width: 36px;
    height: 36px;
    display: block;
    line-height: 36px;
    border-radius: 30px;
    color: #fff!important;
    font-size: 18px!important;
}

ul.social li a i{
    color: #fff!important;
    font-size: 18px;}

ul.social li a:hover {
    background: #5e0c8c;
}


  .formbox h2{
    color: #5e0d8d;
    font-family: roboto;
    font-weight: 400;
    font-size: 36px;
    margin: 0 0 30px;
    display: block;
    text-align: center;
    width: 100%;
  }
  .formbox h2 span{max-width:594px;}
  .assistance-form {
    max-width: 402px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  element.style {
  }
  .assistance-form textarea {
    resize: none;
    height: 160px;
  }
  .assistance-form input, .assistance-form textarea, .assistance-form select {
    background: #f8f8f8;
    font-size: 14px !important;
    font-family: 'Nunito', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 34px;
    padding: 10px 5px 10px 24px !important;
    color: #505050 !important;
    border: 0px solid #000 !important;
    width: 100%;
    max-width: 100% !important;
    margin: 0 0 15px;
    border-radius: 25px 25px !important;
  }
  .assistance-form textarea{resize:none; height:160px;}
  .assistance-form input[type="submit"] {
    background-image: linear-gradient(to right, #8901bd 0%, #660993 51%, #3f035d 100%) !important;
    cursor: pointer;
    width: 145px;
    height: 45px;
    line-height: 45px;
    text-align: center;
    color: #ffffff !important;
    padding: 0;
    font-family: 'Nunito', sans-serif;
    font-weight: 700;
    font-size: 16px !important;
    padding: 0 !important;
  }
  .form-success {
    border: 1px solid #ebebeb;
    margin-bottom: 20px;
    padding: 5px 20px 5px 30px;
    margin-bottom: 30px !important;
    border-radius: 5px;
    border: 1px solid #8901bd;
    color: #8901bd;
  }
  .errors li {
    color: red;
  }
  .assistance-form input[type="submit"]:hover{opacity:0.8;}

  @media only screen and (max-width: 1199px) {
    .grid-tab{max-width:100%;}
    .gridbox{margin:30px 25px 20px;}
  }
  @media only screen and (max-width: 767px) {
    .formbox h2 {
      font-size: 26px;
    }
    .small-banner {
      padding-bottom: 0;
      padding-top: 25px;
    }
    .contact-grid {
      padding: 40px 0;
      padding-bottom: 0;
    }
    .small-banner h2 {
      font-size: 26px;
    }
    .page-careers .content .text-wrap{max-width:100%;}
    .formbox{padding: 0 10px;} 
  }
</style>

