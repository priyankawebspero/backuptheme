   {% comment %}
  {% form 'contact' %}
  <div class="formbox">
    <div class="container">
      <div class="row form-fill text-center">
        <h2><span>Please fill out the form below if you need assistance.</span></h2>
        <div class="assistance-form">
          {% if form.posted_successfully? %}
          <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
            {{ 'contact.form.post_success' | t }}
          </p>
          {% endif %}

          {{ form.errors | default_errors }}
          <div class="field">
            <input type="text" id="contactFormName" name="contact[name]" placeholder="Name"/>
          </div>
          <div class="field">
            <input type="email" placeholder="Email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" />
          </div>
          <div class="field">
            <input type="phone" placeholder="Phone Number" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" />
          </div>
          <div class="field">
            <textarea placeholder="Message..." name="contact[body]" id="contactFormMessage"></textarea>
          </div>
          <div class="field">
            <input type="submit" value="Send"/>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
   {% endcomment %}
</div>


