<section class="home-game-banner-section text-center {{section.settings.banner-class}}" id="game-{{section.id}}">
  {% if section.settings.link != blank %}<a href="{{ section.settings.link }}" class=""> {% endif %}
    <img class="banner-image desktop-xs" data-src="{{ section.settings.banner-id | img_url: 'master' , format: 'pjpg'}}" src="{{ section.settings.banner-id | img_url: 'master' }}">

    <img class="banner-image mobile-xs" data-src="{{ section.settings.image_mobile | img_url: 'master' , format: 'pjpg'}}" src="{{ section.settings.image_mobile | img_url: 'master' }}">
    {% if section.settings.link != blank %}</a>{% endif %}
</section>

{% schema %}
{
"name": "Banner Section",
"settings": [
{
"type": "image_picker",
"id": "banner-id",
"label": "image"
},
{
"type": "image_picker",
"id": "image_mobile",
"label": "Mobile Image"
},
{
"type": "url",
"id": "link",
"label": "Link",
"info": "Optional"
},{
"type": "text",
"id": "banner-class",
"label": "Class"
}
], "presets": [
      {
        "name": "home game banner"
      }
]
}
{% endschema %}