{% if section.blocks.size > 0 %}

{% assign- autoplay = section.settings.autoplay -%}
{% assign- autoplaySpeed = section.settings.slideshow_speed -%}
{% assign- fade = section.settings.slideshow_transition -%}
{% assign- dots =  section.settings.dots -%}

<section class="taeser-banner" id="taeser-{{section.id}}">
    <div class="{% if section.settings.layout == 'default' %}container{% elsif section.settings.layout == 'padd_60' %}container-padd60{% else %}container-fluid{% endif %}">
        <div class="row">
            <div class ="no-padd col-12">
                <div class="banner" data-auto-video="{{ section.settings.auto_playvideo }}">
                {% for block in section.blocks %}
                <div class="item">
                {% if block.type == 'image' and block.settings.dpl_slide_img %}

                    <div class="images-contain">
                        {% if block.settings.image_slide_1 != blank %}
                        {%- assign img_url_1 = block.settings.image_slide_1 | img_url: 'master' -%}                       
                            <img data-src="{{ img_url_1 }}"
                                src="https:{{ img_url_1 }}" alt="{{ block.settings.image_slide_1.alt | default: shop.name }}" itemprop="logo"
                                class="lazyautosizes lazyloaded{% if block.settings.image_slide_1 != blank %} slide-desktop{% endif %}" data-sizes="auto">

                            {% if block.settings.image_slide_mb_1 != blank %}
                            {%- assign img_url_mb_1 = block.settings.image_slide_mb_1 | img_url: 'master' -%}

                            <img data-src="{{ img_url_mb_1 }}"
                                src="https:{{ img_url_mb_1 }}" alt="{{ block.settings.img_url_mb_1.alt | default: shop.name }}" itemprop="logo"
                                class="lazyautosizes lazyloaded slide-mobile" data-sizes="auto" style="display:none;">
                            {% endif %}                     

                        {% else %}
                        <div class="not_img">
                            1880 x 720px
                        </div>
                        {% endif %}
                    </div>
                  <div class="slide-button-bg">
                    <a {% if block.settings.link != blank %} href="{{ block.settings.link }}"{% endif %} class="slide-button"> {{ block.settings.btn_text }} </a>
                  </div>
                  <div class="images-contain">
                    {% if block.settings.image_slide != blank %}
                    {%- assign img_url = block.settings.image_slide | img_url: 'master' -%}                       
                    <img data-src="{{ img_url }}"
                         src="https:{{ img_url }}" alt="{{ block.settings.image_slide.alt | default: shop.name }}" itemprop="logo"
                         class="lazyautosizes lazyloaded{% if block.settings.image_slide_mb != blank %} slide-desktop{% endif %}" data-sizes="auto">

                    {% if block.settings.image_slide_mb != blank %}
                    {%- assign img_url_mb = block.settings.image_slide_mb | img_url: 'master' -%}

                    <img data-src="{{ img_url_mb }}"
                         src="https:{{ img_url_mb }}" alt="{{ block.settings.image_slide_mb.alt | default: shop.name }}" itemprop="logo"
                         class="lazyautosizes lazyloaded slide-mobile" data-sizes="auto" style="display:none;">
                    {% endif %}                     

                    {% else %}
                    <div class="not_img">
                      1880 x 720px
                    </div>
                    {% endif %}
                  </div>
                  
                {% endif %}
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}


{% schema %}
    {
        "name": "Affiliate Top Banner",
        "class": "affiliate-slideshow-sections squad-main-banner",
        "max_blocks": 1,
        "settings": [
            {
                "type": "select",
                "id": "layout",
                "label": "Slideshow Layout:",
                "options": [
                    {
                        "value": "default",
                        "label": "Default"
                    },
                    {
                        "value": "padd_60",
                        "label": "Boxed"
                    },
                    {
                        "value": "full",
                        "label": "Full Width"
                    }
                ],
                "default": "full"
            }
        ],

        "blocks" : [
            {
                "type": "image",
                "name": "Image SlideShow",
                "settings":[
                    {
                        "type": "checkbox",
                        "id": "dpl_slide_img",
                        "label" : "Enable",
                        "default" : true
                    },
                    {
                        "type": "image_picker",
                        "id": "image_slide_1",
                        "label" : "Select Image",
                        "info": "Recommended Image: Width x Height (1880 x 720)px"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_slide_mb_1",
                        "label" : "Select Image Mobile",
                        "info": "Recommended Image: Width x Height (450 x 300)px"
                    },
                    {
                        "type": "text",
                        "id": "btn_text",
                        "label" : "Button Text",
                        "info": "Apply Now"
                    },
                    {
                        "type" : "url",
                        "id" : "link",
                        "label" : "Button Link"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_slide",
                        "label" : "Select Image",
                        "info": "Recommended Image: Width x Height (1880 x 720)px"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_slide_mb",
                        "label" : "Select Image Mobile",
                        "info": "Recommended Image: Width x Height (450 x 300)px"
                    }
                ]
            }
        ],
        "presets": [{
            "name": "Slideshow",
            "category": "Slideshow",
            "blocks": [
                {
                    "type": "image"
                }
            ]
        }]
    }
{% endschema %}
