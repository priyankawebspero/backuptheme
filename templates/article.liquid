<div class="article-template">

  {% comment %} {% include 'breadcrumb' %}{% endcomment %}

  <div class="page-header">
    {% if current_tags %}
    {% if settings.enable_multilang and blog.title contains '|' %}  
    <h2 class="lang1">
      {{ blog.title | split: '|' | first | link_to: blog.url }} &raquo; {{ current_tags.first }}
    </h2>
    <h2 class="lang2">
      {{ blog.title | split: '|' | last | link_to: blog.url }} &raquo; {{ current_tags.first }}
    </h2>
    {% else %}
    <h2>
      {{ blog.title | split: '|' | first | link_to: blog.url }} &raquo; {{ current_tags.first }}
    </h2>
    {% endif %}

    {% else %}
    <h2>
      {% include 'multilang' with blog.title %}
    </h2>
    {% endif %}
  </div>
  <div class="container">
    <div class="halo-blog-content article-content">
      <div class="row {{ blog.template_suffix }} ">
        {% section 'sidebar-blog' %}
        {% section 'article-template' %}
      </div> 
    </div>   
  </div>
  {% section 'related-blod-sec' %}
</div>
<style>
  @media ( min-width: 787px ) {
    div#desktop-xs {
      display: flex;
    }
    div#mobile-xs {
      display: none;
    }
  }
  @media ( max-width: 786px ) {
    .detail-page-blog-sec {
      padding: 0;
    }	
    .article-details {
      margin-bottom: 0 !important;
    }
    .article-template {
      padding: 0 15px;
    }
    div#shopify-section-sidebar-blog {
      display: none;
    }
    div#desktop-xs {
      display: none;
    }
    div#mobile-xs {
      display: contents;
    }
  } 
